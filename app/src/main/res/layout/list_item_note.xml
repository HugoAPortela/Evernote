<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/note_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        tools:text="20/02/2001" />

    <TextView
        android:id="@+id/note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="Find any text in files linux" />

    <TextView
        android:id="@+id/note_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="marquee"
        android:layout_marginBottom="12dp"
        tools:text="http://www.google.com http://www.google.com http://www.google.com http://www.google.com http://www.google.com http://www.google.com http://www.google.com http://www.google.com http://www.google.com http://www.google.com http://www.google.com http://www.google.com http://www.google.com " />


</LinearLayout>